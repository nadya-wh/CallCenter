<apex:page controller="ChartController" sidebar="false">
	<apex:pageBlock title="Organisation statistic charts">
		<apex:pageBlockSection title="Product active/inactive statistic">
		    <apex:chart height="300" width="600" data="{!productData}" animate="false">
		        <apex:pieSeries labelField="name" dataField="data" donut="20" colorSet="#1ad06e,#ff2b2b">
		        <apex:chartLabel orientation="vertical"  color="#ffffff"/>
		    </apex:pieSeries>

		        <apex:legend position="left"/>
		    </apex:chart>
		</apex:pageBlockSection>
    </apex:pageBlock>
</apex:page>